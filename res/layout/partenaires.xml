<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="#f3ebcd"
	android:layout_height="fill_parent" android:layout_width="fill_parent">

	<ImageView android:id="@+id/ivHeader" android:layout_height="wrap_content"
		android:background="@drawable/header" android:layout_gravity="top|center_horizontal"
		android:layout_width="fill_parent" android:scaleType="center" />

	<ScrollView android:id="@+id/svPartenaires"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="50">

		<LinearLayout android:id="@+id/llPartenairesGlobal"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1" android:orientation="vertical">

			<TextView android:text="Parrains officiels" android:id="@+id/tvParrainsOfficiels"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textColor="#000000" android:textSize="18dp"  android:background="#EFF0F0"
				android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"></TextView>

			<Gallery android:id="@+id/gParrainsOfficiels"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:spacing="16dp"
				android:background="#ffffff" android:paddingTop="5dp"
				android:paddingBottom="5dp"></Gallery>

			<TextView android:text="Partenaires officiels" android:id="@+id/tvParrainsOfficiels"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textColor="#000000" android:textSize="18dp"  android:background="#EFF0F0"
				android:layout_gravity="center_horizontal" ></TextView>

			<Gallery android:id="@+id/gPartenairesOfficiels"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:spacing="16dp"
				android:background="#ffffff" android:paddingTop="5dp"
				android:paddingBottom="5dp"></Gallery>

			<TextView android:text="Partenaires" android:id="@+id/tvParrainsOfficiels"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textColor="#000000" android:textSize="18dp"  android:background="#EFF0F0"
				android:layout_gravity="center_horizontal"></TextView>

			<Gallery android:id="@+id/gPartenaires" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:spacing="16dp"
				android:background="#ffffff"
				android:paddingTop="5dp" android:paddingBottom="5dp" />
				
			<TextView android:text="Partenaires mÃ©dias" android:id="@+id/tvPartenairesMedias"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:textColor="#000000" android:textSize="18dp"  android:background="#EFF0F0"
				android:layout_gravity="center_horizontal"></TextView>

			<Gallery android:id="@+id/gPartenairesMedias" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:spacing="16dp"
				android:background="#ffffff"
				android:paddingTop="5dp" android:paddingBottom="5dp" />

		</LinearLayout>

	</ScrollView>

