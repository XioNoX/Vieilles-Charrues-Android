<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/backgroung_carte">

	<RelativeLayout android:id="@+id/rlInfos"
		android:layout_width="wrap_content" android:layout_height="wrap_content">

		<fr.asso.vieillescharrues.carte.DoubleScroll
			android:id="@+id/plan2" android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<RelativeLayout android:id="@+id/rlPlan"
				android:layout_width="fill_parent" android:layout_height="fill_parent">

				<ImageView android:id="@+id/ivPlan" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

			</RelativeLayout>

		</fr.asso.vieillescharrues.carte.DoubleScroll>

		<LinearLayout android:id="@+id/llInfos"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="center_vertical" android:minWidth="250dp"
			android:padding="3dp" android:background="@drawable/carte_fond_infos">

			<Button android:id="@+id/btnCarte1" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Carte 1"
				android:background="#ffffff" android:layout_margin="2dp" />

			<Button android:id="@+id/btnCarte2" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Carte 2"
				android:background="#ffffff" android:layout_margin="2dp" />

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/tvPrecision"
				android:layout_marginRight="5dp" android:text="PrÃ©cision : "
				android:textColor="#ffffff" android:layout_marginLeft="5dp" />

		</LinearLayout>

	</RelativeLayout>

	<ImageView android:id="@+id/ivPoint" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

</LinearLayout>
