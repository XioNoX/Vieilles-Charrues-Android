<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="#f3ebcd"
	android:layout_height="fill_parent" android:layout_width="fill_parent">

	<LinearLayout android:id="@+id/llHeader"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/bg_header" android:gravity="center_horizontal">

		<ImageView android:id="@+id/ivHeader" android:layout_height="wrap_content"
		android:background="@drawable/header" android:layout_gravity="top|center_horizontal"
		android:layout_width="fill_parent" android:scaleType="center" />

	</LinearLayout>

	<GridView android:id="@+id/gvMenu" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:numColumns="auto_fit"
		
		android:columnWidth="150dp" android:stretchMode="columnWidth"
		android:gravity="center" android:layout_weight="1" />

	<ImageView android:id="@+id/ivFooter" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_gravity="bottom|center_horizontal"
		android:background="@drawable/footer" />

</LinearLayout>