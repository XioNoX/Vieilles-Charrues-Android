<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="#f3ebcd"
	android:layout_height="fill_parent" android:layout_width="fill_parent">

	<ImageView android:id="@+id/ivHeader" android:layout_height="wrap_content"
		android:background="@drawable/header" android:layout_gravity="top|center_horizontal"
		android:layout_width="fill_parent" android:scaleType="center" />

	<ListView android:id="@+id/android:list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="#f3ebcd"
		android:cacheColorHint="#f3ebcd" android:layout_weight="1"
		android:textFilterEnabled="true" android:smoothScrollbar="true" 
		android:dividerHeight="0px" android:divider="#f3ebcd" />

	<LinearLayout android:id="@+id/llBoutonsProgramme"
		android:layout_weight="0" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="horizontal"
		android:gravity="center_vertical">

		<Button android:text="Jeu." android:id="@+id/btnJeudi"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<Button android:text="Vend." android:id="@+id/btnVendredi"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<Button android:text="Sam." android:id="@+id/btnSamedi"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<Button android:text="Dim." android:id="@+id/btnDimanche"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />

		<Button android:text="Artistes" android:id="@+id/btnArtistes"
			android:layout_height="wrap_content" android:layout_gravity="right"
			android:layout_width="wrap_content" />

	</LinearLayout>

</LinearLayout>