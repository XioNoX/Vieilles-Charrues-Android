<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="#f3ebcd"
	android:layout_height="fill_parent" android:layout_width="fill_parent">

	<LinearLayout android:id="@+id/llInfosImage"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:background="#EFF0F0"
		android:layout_marginTop="10dp" android:paddingLeft="10dp">

		<ImageView android:id="@+id/ivSource"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingRight="5dip" />

		<LinearLayout android:id="@+id/llInfos"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView android:text="" android:id="@+id/tvTitre"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000" />

			<TextView android:text="" android:id="@+id/tvDate"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000" />

		</LinearLayout>

	</LinearLayout>

	<ScrollView android:id="@+id/svNews" android:background="#f3ebcd"
		android:cacheColorHint="#f3ebcd" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:isScrollContainer="true">

		<WebView android:id="@+id/wvNews" android:layout_height="wrap_content"
			android:layout_width="fill_parent" />

	</ScrollView>

</LinearLayout>
